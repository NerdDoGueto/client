  UIWidget
    id: level
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-bottom: 30
    margin-left: 32
    font: verdana-11px-monochrome
  UIWidget
    id: time
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-bottom: 30
    margin-left: 110
    font: verdana-11px-monochrome
  UIWidget
    id: recipe
    height: 100
    anchors.bottom: time.top
    anchors.left: desc.right
    anchors.right: parent.right
    margin-bottom: -25
    margin-right: 7
    margin-left: 7
    layout:
      type: grid
      cell-size: 30 30
      num-columns: 3
      num-lines: 3
      cell-spacing: 2
