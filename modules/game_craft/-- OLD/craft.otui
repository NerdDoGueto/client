SpeedUpWindow < UIWindow
  id: speedUpWindow
  size: 300 150
  anchors.centerIn: parent
  image-source: images/speedup_background
  @onEscape: self:hide()
  @onEnter: speedUpItem()

  UIWidget
    id: text
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: confirm.top
    margin-top: 5
    margin-left: 5
    margin-right: 5
    margin-bottom: 10

  Button
    id: confirm
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    margin-bottom: 10
    margin-right: 20
    !text: tr('Confirm')
    @onClick: speedUpItem()
  Button
    id: cancel
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-bottom: 10
    margin-left: 20
    !text: tr('Cancel')
    @onClick: self:getParent():hide()

CreateWindow < UIWindow
  id: createWindow
  size: 340 297
  anchors.centerIn: parent
  &save: true
  image-source: images/mini_background
  font: verdana-11px-rounded
  @onEscape: self:hide()

  UIItem
    id: item
    size: 48 48
    anchors.top: parent.top
    anchors.left: parent.left
    margin-top: 35
    margin-left: 15
    virtual: true
  UIWidget
    id: name
    anchors.top: item.top
    anchors.left: item.right
    font: verdana-11px-rounded
    margin-top: 15
    margin-left: 10
    text-auto-resize: true
  UIWidget
    id: label
    anchors.top: item.bottom
    anchors.left: parent.left
    margin-top: 5
    margin-left: 17
    font: verdana-11px-rounded
    !text: tr('Required Materials')
  UIWidget
    id: recipe
    size: 302 74
    anchors.top: label.bottom
    anchors.left: label.left
    margin-top: 5
    layout:
      type: grid
      cell-size: 36 36
      num-columns: 8
      num-lines: 2
      cell-spacing: 2

  UIWidget
    id: labelTotal
    height: 30
    anchors.top: recipe.bottom
    anchors.left: recipe.left
    margin-top: 8
    text-align: topLeft
    font: verdana-11px-rounded
    text-wrap: true
    text: "Total de unidades: 1\nTempo total: 1"

  HorizontalScrollBar
    id: qntScrollBar
    color: white
    anchors.top: labelTotal.bottom
    anchors.left: recipe.left
    anchors.right: recipe.right
    margin-top: 5
    step: 1
    minimum: 1
    maximum: 100
    show-value: true
    @onValueChange: refreshCreateWindow()

  UIButton
    id: create
    size: 98 30
    image-source: images/craft_on
    anchors.top: qntScrollBar.bottom
    anchors.left: qntScrollBar.left
    margin-top: 20
    margin-left: 30
    @onClick: doCreateItem()
    opacity: 0.8
    
    $hover:
      image-source: images/craft_hover
      opacity: 1
    
    $pressed:
      image-source: images/craft_press
      opacity: 0.9

  UIButton
    id: cancel
    size: 98 30
    image-source: images/cancel_on
    anchors.top: qntScrollBar.bottom
    anchors.right: qntScrollBar.right
    margin-top: 20
    margin-right: 22
    @onClick: self:getParent():hide()
    opacity: 0.8
    
    $hover:
      image-source: images/cancel_hover
      opacity: 1
    
    $pressed:
      image-source: images/cancel_press
      opacity: 0.9

CraftItemWidget < UIWidget
  size: 418 137
  anchors.top: parent.top
  anchors.left: parent.left
  anchors.right: parent.right
