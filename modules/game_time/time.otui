  Label
    id: location
    !text: ''
    font: terminus-10px
    color: #FFFFFF
    //text-align: center
    background-color: alpha
    anchors.left: prev.right
    anchors.top: parent.top
    text-offset: 2 0
    text-auto-resize: true
    margin-top: 6
    margin-left: 5
