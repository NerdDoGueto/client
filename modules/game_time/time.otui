UIWindow
  id: timeWindow
  size: 80 24
  anchors.left: parent.left
  anchors.top: parent.top
  margin-top: 10
  margin-left: 10

  UIWidget
    id: timeImage
    height: 24
    anchors.left: parent.left
    anchors.top: parent.top

  UILabel
    id: timeLabel
    height: 24
    text-align: center
    anchors.left: prev.right
    anchors.top: parent.top
