ScrollBarSlider < UIButton
  id: sliderButton
  anchors.centerIn: parent
  size: 13 17
  image-source: /images/ui/scrollbar
  image-clip: 0 26 13 13
  image-border: 2
  image-color: #ffffffff
  $hover:
    image-clip: 13 26 13 13
  $pressed:
    image-clip: 26 26 13 13
  $disabled:
    image-color: #ffffff66

GODzruScrollBarSlider2 < UIButton
  id: sliderButton
  anchors.centerIn: parent
  size: 160 13
  image-source: /images/game/chat/slider2
  opacity: 0.8
  image-border-left: 5
  image-border-right: 5
  $hover:
    opacity: 1.0
  $pressed:
    opacity: 1.0
  $disabled:
    opacity: 0.5

profissionScrollBarValueLabel < Label
  id: valueLabel
  font: lucida-11px-rounded
  anchors.fill: parent
  color: white
  text-align: center

