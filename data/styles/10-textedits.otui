TextEdit < UITextEdit
  font: start_11_big
  color: white
  size: 86 25
  text-offset: 0 3
  padding: 5
  padding-left: 8
  image-source: /images/ui/textedit
  image-border: 10
  selection-color: #111416
  selection-background-color: #999999
  $disabled:
    color: #aaaaaa88

PasswordTextEdit < TextEdit
  text-hidden: true

MultilineTextEdit < TextEdit
  multiline: true
