Panel < UIWidget
  phantom: true
  auto-focus: first

ScrollablePanel < UIScrollArea
  phantom: true
  auto-focus: first

FlatPanel < Panel
  image-source: ~
  image-border: 1

ScrollableFlatPanel < ScrollablePanel
  image-source: ~
  image-border: 1

LightFlatPanel < Panel
  image-source: ~
  image-border: 1
